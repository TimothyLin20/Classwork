print("Please input the number of containers to deposit:")
containers = int(input())
print("Please input the capacity of a bottle in litres:")
total = 0
if float(input())>1:
    total+=0.25
else:
    total += 0.10
for i in range(1, containers) :
    print("Please input the capacity of another bottle in litres:")
    if float(input())> 1:
        total += 0.25
    else:
        total += 0.10
print("Your refund for returning those containers is $%.2f" %total)
